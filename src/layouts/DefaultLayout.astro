---
import BaseLayout from "@layouts/BaseLayout.astro";
import Footer from "@components/Footer.astro";
---

<BaseLayout>
  <main class="flex flex-col flex-grow md:min-h-screen md:flex-row">
    <section
      class="flex flex-col items-center justify-center px-4 py-8 md:h-screen md:w-1/2 md:flex-none md:px-8 md:py-0"
    >
      <div class="flex flex-col items-center w-full gap-2">
        <a href="/">
          <h1
            class="font-mono text-4xl font-bold text-center whitespace-nowrap md:text-left"
          >
            skorporaal.com<span
              class="inline-block -translate-x-1 animate-blink"
              >|
            </span>
          </h1>
        </a>

        <h2 class="text-lg italic">
          <a href="/about" class="fancy-link">About Me</a>
        </h2>
      </div>
    </section>

    <section class="flex flex-col flex-grow md:w-1/2 md:flex-grow-0">
      <slot></slot>
    </section>
  </main>
  <Footer />
</BaseLayout>
