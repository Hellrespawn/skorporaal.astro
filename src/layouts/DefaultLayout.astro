---
import BaseLayout from "@layouts/BaseLayout.astro";
import Footer from "@components/Footer.astro";
import Quote from "@components/Quote.svelte";
---

<BaseLayout>
  <main class="flex flex-col flex-grow md:min-h-screen md:flex-row">
    <section
      class="flex flex-col items-center justify-center px-4 pt-8 md:h-screen md:w-1/2 md:flex-none md:px-8 md:pt-0">

      <div class="flex flex-col items-center w-full gap-2 md:items-baseline md:flex-row md:justify-around">
        <a href="/">
          <h1 class="font-mono text-4xl font-bold text-center whitespace-nowrap md:text-left">
            skorporaal.com<span class="inline-block -translate-x-1 animate-blink">|
            </span>
          </h1>
        </a>

        <a href="/about" class="fancy-link">About Me</a>
      </div>

      <div class="my-16">
        <Quote client:load />
      </div>
    </section>

    <section class="flex flex-col flex-grow md:w-1/2 md:flex-grow-0">
      <slot />
    </section>
  </main>
  <Footer />
</BaseLayout>
