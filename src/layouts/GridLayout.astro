---
import BaseLayout from "@l:BaseLayout.astro";
import Footer from "@c:Footer.astro";
import ThemeToggle from "../components/ThemeToggle/ThemeToggle.astro";
import Title from "../components/Title.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<BaseLayout title={title}>
  <main
    class="grid grid-rows-[repeat(3,auto)] md:grid-rows-[auto_1fr_1fr] grid-cols-[1fr_1fr] md:min-h-screen"
  >
    <div
      class="col-span-2 md:col-span-1 md:row-span-1 md:col-start-1 flex flex-col items-center mt-4 mb-8 md:mb-16 gap-4"
    >
      <div class="w-fit self-start">
        <ThemeToggle />
      </div>
      <Title />
    </div>
    <div
      class="col-span-2 md:col-span-1 md:row-span-2 md:col-start-1 order-1 md:order-[0]"
    >
      <slot name="left"></slot>
    </div>
    <div
      class="col-span-2 md:col-span-1 md:row-span-3 md:col-start-2 md:row-start-1"
    >
      <slot name="right"></slot>
    </div>
  </main>
  <Footer />
</BaseLayout>
