---
import Footer from "../components/Footer.astro";
import Glow from "../components/Glow.astro";
import Head from "../components/Head.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html>
    <head>
        <Head title={title} />
    </head>

    <body class="background-pattern relative flex flex-col">
        <main
            class="mx-auto flex w-full max-w-(--breakpoint-md) flex-col bg-gray-50 text-gray-900 md:border-x md:border-gray-200 dark:bg-gray-800 dark:text-gray-50 md:dark:border-gray-900"
        >
            <slot />
        </main>
        <Footer />
        <Glow />
    </body>
</html>
