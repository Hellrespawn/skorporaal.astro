---
import Footer from '../components/Footer.astro';
import Glow from '../components/Glow.astro';
import Head from '../components/Head.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html>
  <head>
    <Head title={title} />
  </head>

  <body class="flex flex-col background-pattern relative">
    <main
      class="flex flex-col w-full mx-auto max-w-screen-md text-gray-900 bg-gray-50 dark:bg-gray-800 dark:text-gray-50 md:border-x md:border-gray-200 md:dark:border-gray-900"
    >
      <slot />
    </main>
    <Footer />
    <Glow />
  </body>
</html>
