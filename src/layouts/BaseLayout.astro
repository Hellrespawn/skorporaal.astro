---
import { type CategoryData } from "@s:data";

import Footer from "@c:Footer.astro";
import Head from "@c:Head.astro";
import NavBar from "@c:NavBar.astro";

export interface Props {
  title: string;
  accent?: CategoryData;
}

const { title, accent } = Astro.props as Props;

const showHome = !title.toLowerCase().includes("home");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={title} />
  </head>

  <body
    class="flex flex-col min-h-screen text-gray-900 bg-gray-50 dark:bg-gray-800 dark:text-gray-50"
  >
    <NavBar showHome={showHome} />
    <slot></slot>

    <Footer accent={accent} />
  </body>
</html>
