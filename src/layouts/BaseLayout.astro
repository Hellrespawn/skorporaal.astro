---
import Head from "@components/Head.astro";

export interface Props {
    title?: string
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>

    <Head title={title} />
</head>

<body class="flex min-h-screen flex-col bg-gray-50 text-gray-900 dark:bg-gray-800 dark:text-gray-50">
    <slot />
</body>

</html>
