---
import Head from "@components/Head.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={title} />
  </head>

  <body
    class="flex flex-col min-h-screen text-gray-900 bg-gray-50 dark:bg-gray-800 dark:text-gray-50"
  >
    <slot></slot>
  </body>
</html>
