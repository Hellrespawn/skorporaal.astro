---
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
import type { CategoryData } from '../scripts/data';

export interface Props {
  title: string;
  accent?: CategoryData;
}

const { title, accent } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={title} />
  </head>

  <body
    class="flex flex-col min-h-screen text-gray-900 bg-gray-50 dark:bg-gray-800 dark:text-gray-50"
  >
    <slot />

    <Footer accent={accent} />
  </body>
</html>
