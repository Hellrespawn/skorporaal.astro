---
import BaseLayout from "@layouts/BaseLayout.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<BaseLayout title={title}>
  <main
    class="flex flex-col flex-grow gap-4 md:min-h-screen md:flex-row md:gap-8"
  >
    <section class="flex flex-col flex-grow md:w-1/2 md:flex-grow-0">
      <slot name="left"></slot>
    </section>

    <section class="flex flex-col flex-grow md:w-1/2 md:flex-grow-0">
      <slot name="right"></slot>
    </section>
  </main>
  <Footer />
</BaseLayout>
