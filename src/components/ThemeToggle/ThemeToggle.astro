---
import Sun from "@c:Icons/Sun.astro";
import Moon from "@c:Icons/Moon.astro";
import Button from "@c:Button.astro";
import ThemeToggle from "@c:ThemeToggle/_ThemeToggle.svelte";
---

<ThemeToggle client:load>
  <Button class="rounded-r-full">
    <button
      class="flex flex-row items-center gap-3 py-2 px-2 "
      tabindex="0"
      aria-label="toggle theme"
    >
      <span class="hidden rounded-full dark:inline">
        <Sun />
      </span>
      <span class="rounded-full dark:hidden">
        <Moon />
      </span>
    </button>
  </Button>
</ThemeToggle>
