---
import { SITE } from '@scripts/config'
import { dateTimeToString } from '@scripts/common';
import ThemeToggle from './ThemeToggle.svelte';

const dateString = dateTimeToString(SITE.builtAt)
---

<footer
    class="relative flex flex-row justify-between bg-gray-100 py-8 px-4 text-gray-400 dark:bg-gray-700 dark:text-gray-400 md:justify-end md:px-8">
    <div class="mr-2 flex flex-col md:mr-0">
        <div class="font-bold">
            Copyright Â© 2022
            <a href="mailto:{{ site.email }}" class="fancy-external-link">{ SITE.name }</a>
        </div>
        <div>Last updated on <time datetime={SITE.builtAt.toISOString()}>{dateString}</time></div>
    </div>
    <ThemeToggle client:load />
</footer>
