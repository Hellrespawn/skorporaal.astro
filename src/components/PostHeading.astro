---
import type { CategoryData } from '../scripts/data';

export interface Props {
  accent: CategoryData;
  authors: string[];
  date: Date | string;
}

const { accent, authors, date } = Astro.props as Props;
---

<!-- Category name -->
<div class={`text-sm ${accent.text}`}>{accent.single}</div>
<!-- Heading with border -->
<div
  class={`${accent.border} flex flex-row flex-wrap-reverse items-center justify-between border-t-2 gap-x-4`}
>
  <!-- Date -->
  <span class="text-gray-400 dark:text-gray-500">{date}</span>

  <span class="italic">
    <!-- Authors -->
    {authors}
  </span>
</div>
