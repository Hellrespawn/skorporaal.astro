---
export interface Props {
  src: string;
  name: string;
  class?: string;
  dark?: boolean;
  png?: boolean;
}

const {
  src,
  name,
  class: classes = '',
  dark = false,
  png = false,
} = Astro.props as Props;

const extension = png ? 'png' : 'svg';
---

<img
  src={`/assets/${src}${dark ? '-light' : ''}.${extension}`}
  class={`${dark ? ' dark:hidden' : ''} ${classes}`}
  alt={`${name} logo`}
/>
{
  dark && (
    <img
      src={`/assets/${src}-dark.${extension}`}
      class={`hidden dark:block ${classes}`}
      alt={`${name} logo`}
    />
  )
}
