---
export interface Props {
  src: string;
  name: string;
  dark?: boolean;
}

const { src, name, dark = false } = Astro.props as Props;

const baseClass =
  "w-20 h-20 bg-gray-100 border border-gray-200 rounded-r-full dark:bg-gray-700 dark:border-gray-900 dark:border-none";
---

<div class="mb-4 flex flex-row items-center gap-8">
  <img
    src={`/assets/skills/${src}${dark ? "-light" : ""}.png`}
    class={baseClass + (dark ? " dark:hidden" : "")}
  />
  {dark && (
    <img
      src={`/assets/skills/${src}-dark.png`}
      class={baseClass + " + hidden dark:block"}
    />
  )}
  <div class="flex-grow">
    <h3 class="text-lg font-semibold">{name}</h3>
    <slot></slot>
  </div>
</div>
