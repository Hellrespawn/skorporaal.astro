---
export interface Props {
  src: string;
  name: string;
  class?: string;
  dark?: boolean;
  png?: boolean;
}

const {
  src,
  name,
  class: classes = "",
  dark = false,
  png = false,
} = Astro.props as Props;

const extension = png ? "png" : "svg";
---

<div class="my-4 flex flex-row items-center gap-4">
  <div
    class={`w-20 h-20 bg-gray-100 border border-gray-200 rounded-r-full overflow-hidden dark:bg-gray-700 dark:border-gray-900 dark:border-none ${classes}`.trim()}
  >
    <img
      src={`/assets/skills/${src}${dark ? "-light" : ""}.${extension}`}
      class={`${dark ? " dark:hidden" : ""} w-full h-full`}
    />
    {dark && (
      <img
        src={`/assets/skills/${src}-dark.${extension}`}
        class="hidden h-full w-full dark:block"
      />
    )}
  </div>
  <div class="flex-grow">
    <h3 class="text-lg font-semibold">{name}</h3>
    <slot></slot>
  </div>
</div>
