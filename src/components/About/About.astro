import Links from "@components/About/Links.astro";
import TopNav from "@components/TopNav.astro";
import { Content as About } from "@components/About/About.md";
---

<div class="w-full h-full">
  <TopNav />

  <div
    class="flex flex-col items-end flex-shrink-0 float-right gap-4 mb-4 ml-4"
