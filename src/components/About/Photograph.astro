---
import { SITE_DATA } from "@s:data";
---

<div class="relative w-40 overflow-hidden border-gray-200 rounded-r-full group dark:border-gray-900">
  <img
    alt={SITE_DATA.name}
    src="/assets/photograph.jpg"
    class="object-cover transition-[filter] duration-photograph saturate-0 group-hover:saturate-[75%]"
  />
  <div
    class="absolute top-0 right-0 bottom-0 left-0 bg-secondary-500 dark:bg-primary-500 opacity-[20%] rounded-r-full group-hover:opacity-0 transition-opacity duration-photograph"
  >
  </div>
</div>
