---
export interface Props {
  class?: string;
  side?: 'left' | 'right';
}

const { class: classes = '', side = 'left' } = Astro.props as Props;

const roundedClass = side === 'left' ? 'rounded-r-xl' : 'rounded-l-xl';
---

<div
  class={`bg-gray-100 border border-gray-200 overflow-hidden dark:bg-gray-700 dark:border-gray-900 ${roundedClass} ${classes}`.trim()}
>
  <slot />
</div>
