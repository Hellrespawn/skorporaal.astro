---
import type { CollectionEntry } from 'astro:content';
import PostLayout from '../../layouts/PostLayout.astro';
import type { PostCategory } from '../../scripts/data';
import { getStaticPaths as getEntriesStaticPaths } from '../../collection';

export async function getStaticPaths() {
  return await getEntriesStaticPaths();
}

interface Props {
  entry: CollectionEntry<any>;
  category: PostCategory;
}

const { entry, category } = Astro.props;

const { Content } = await entry.render();
---

<PostLayout post={entry.data} category={category}>
  <Content />
</PostLayout>
