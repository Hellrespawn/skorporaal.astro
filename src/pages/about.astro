---
import DefaultLayout from "@layouts/DefaultLayout.astro";
import Home from "@components/Icons/Home.astro";
import Quote from "@components/Quote.svelte";
import photoReference from "@src/images/photograph.jpg";
import { Content as About } from "@src/about.md";
import { SITE_DATA } from "@scripts/data";
---

<DefaultLayout title="404 - Page not found!">
  <div class="w-full h-full py-8 md:py-0">
    <div class="flex flex-row justify-center my-4">
      <a class="button rounded-full" href="/">
        <Home />
      </a>
    </div>


    <div class="flex flex-col items-end gap-4 flex-shrink-0 relative float-right ml-4 mb-4">
      <img alt={SITE_DATA.name} src={photoReference} class="object-cover rounded-l-full h-40 saturate-[25%]">
      <div class="absolute top-0 right-0 bg-secondary-500 dark:bg-primary-500 opacity-[15%] h-40 w-full rounded-l-full">
      </div>
      <div class="rounded-l-full bg-gray-700 text-gray-200 py-1 px-4 w-[70%] text-center">
        <a href="/">GitHub</a>
      </div>
    </div>

    <div class="mx-3 prose-full prose-ul:w-fit prose-ul:mx-auto prose-h3:text-center">
      <About />
    </div>
  </div>
</DefaultLayout>
