---
import type { CollectionEntry } from 'astro:content';
import type { PostCategory } from '../../data';
import { getEntries } from '../../collection';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import PostHeading from '../../components/PostHeading.astro';

export async function getStaticPaths() {
  const entries = await getEntries();

  const paths = entries.map((entry) => {
    return {
      params: {
        slug: entry.slug,
      },
      props: { entry },
    };
  });

  return paths;
}

interface Props {
  entry: CollectionEntry<'post'>;
  category: PostCategory;
}

const { entry } = Astro.props;

const post = entry.data;

const { Content } = await entry.render();
---

<BaseLayout title={post.title}>
  <Navigation showHome />
  <main class="flex flex-col items-center">
    <div class="px-3 lg:px-0 w-full max-w-[65ch]">
      <article lang={post.lang} class="py-8 lg:pt-16">
        <PostHeading post={post} />
        <div class="pt-8 prose-custom">
          <h1 class="text-3xl">{post.title}</h1>

          <Content />
        </div>
      </article>
    </div>
  </main>
</BaseLayout>
