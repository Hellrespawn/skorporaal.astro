---
import About from '../components/About/About.astro';
import Navigation from '../components/Navigation.astro';
import Portfolio from '../components/Portfolio/Portfolio.astro';
import Skills from '../components/Skills/Skills.astro';
import Timeline from '../components/Timeline/Timeline.astro';
import Title from '../components/Title.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<BaseLayout title={title}>
  <main class="flex flex-col">
    <Navigation />
    <section class="flex flex-col items-center my-8 md:my-24">
      <Title />
    </section>

    <About />

    <Skills />

    <Portfolio />

    <Timeline />
  </main>
</BaseLayout>
