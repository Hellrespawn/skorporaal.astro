---
import { getRecipes } from '../collection';
import About from '../components/About/About.astro';
import Navigation from '../components/Navigation.astro';
import Portfolio from '../components/Portfolio/Portfolio.astro';
import RecipesWrapper from '../components/RecipesWrapper';
import Skills from '../components/Skills/Skills.astro';
import Timeline from '../components/Timeline/Timeline.astro';
import Title from '../components/Title.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const entries = await getRecipes();
---

<BaseLayout title={title}>
  <Navigation />

  <Title />

  <About />

  <Portfolio />

  <Timeline />

  <Skills />

  <RecipesWrapper entries={entries} client:only="react" />
</BaseLayout>
