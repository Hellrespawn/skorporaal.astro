---
import { getRecipes } from "../collection";
import About from "../components/About/About.astro";
import Navigation from "../components/Navigation.astro";
import Portfolio from "../components/Portfolio/Portfolio.astro";
import RecipesWrapper from "../components/RecipesWrapper";
import SkillsWrapper from "../components/Skills/SkillsWrapper.astro";
import Timeline from "../components/Timeline/Timeline.astro";
import Title from "../components/Title.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props as Props;

const entries = await getRecipes();
---

<BaseLayout title={title}>
    <Navigation />

    <Title />

    <About />

    <SkillsWrapper />

    <Portfolio />

    <Timeline />

    <RecipesWrapper entries={entries} client:load />
</BaseLayout>
