---
import { type Frontmatter } from '@s:post';

import GridLayout from '@l:GridLayout.astro';

import About from '@c:About/About.astro';
import Feed from '@c:Feed/Feed.astro';

const instances = [
  ...(await Astro.glob<Frontmatter>('../content/**/*.md')),
  ...(await Astro.glob<Frontmatter>('../content/**/*.mdx')),
];
---

<GridLayout title="Home">
  <Fragment slot="left">
    <About />
  </Fragment>
  <Fragment slot="right">
    <!-- <Feed client:only="vue" instances={instances} /> -->
    <Feed instances={instances} />
  </Fragment>
</GridLayout>
