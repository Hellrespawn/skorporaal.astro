---
import About from '../components/About/About.astro';
import Navigation from '../components/Navigation.astro';
import Portfolio from '../components/Portfolio/Portfolio.astro';
import Skills from '../components/Skills/Skills.astro';
import Timeline from '../components/Timeline/Timeline.astro';
import Title from '../components/Title.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<BaseLayout title={title}>
  <main class="hidden lg:flex lg:flex-row lg:justify-between">
    <div class="w-1/2 pr-4">
      <Navigation />
      <section class="flex flex-col items-center my-24">
        <Title />
      </section>

      <About />

      <Skills />
    </div>

    <div class="w-1/2 pl-4">
      <Portfolio />

      <Timeline />
    </div>
  </main>

  <main class="lg:hidden flex flex-col w-full">
    <Navigation />
    <section class="flex flex-col items-center my-8">
      <Title />
    </section>

    <About />

    <Timeline />

    <Portfolio />

    <Skills />
  </main>
</BaseLayout>
