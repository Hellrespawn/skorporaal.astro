---
import { getEntries } from '../collection';
import About from '../components/About/About.astro';
import Navigation from '../components/Navigation.astro';
import Portfolio from '../components/Portfolio/Portfolio.astro';
import RecipesComponent from '../components/RecipesComponent.vue';
import Skills from '../components/Skills/Skills.astro';
import Timeline from '../components/Timeline/Timeline.astro';
import Title from '../components/Title.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const entries = await getEntries();
---

<BaseLayout title={title}>
  <main class="hidden lg:flex lg:flex-row lg:justify-between">
    <div class="w-1/2 pr-4">
      <Navigation />

      <Title />

      <About />

      <Skills />
    </div>

    <div class="w-1/2 pl-4">
      <Portfolio />

      <Timeline />

      <RecipesComponent entries={entries} client:only="vue" />
    </div>
  </main>

  <main class="lg:hidden flex flex-col w-full">
    <Navigation />

    <Title />

    <About />

    <Timeline />

    <Portfolio />

    <Skills />

    <RecipesComponent entries={entries} client:only="vue" />
  </main>
</BaseLayout>
